---
import Logo from './Logo.astro'

import facebookIcon from '@assets/svg/facebook.svg?raw'
import twitterIcon from '@assets/svg/twitter.svg?raw'
import instagramIcon from '@assets/svg/instagram.svg?raw'

const rrssList = [facebookIcon, twitterIcon, instagramIcon]
---

<footer class="footer">
  <div class="footer__container--left">
    <Logo type="white" />
    <span class="copyright">
      &copy;2024 EzPark. Todos los derechos reservados
    </span>
  </div>
  <div class="footer__container--right">
    {
      rrssList.map((rrss) => (
        <a href="#" class="rrss">
          <Fragment set:html={rrss} />
        </a>
      ))
    }
  </div>
</footer>

<style>
  .footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-inline: 4.8rem;
    background: var(--color-primary-500);
    height: 12rem;
    color: var(--color-white);
  }
  .footer__container--left {
    display: flex;
    align-items: center;
    gap: 4rem;
    font-weight: 600;
    font-size: 1.6rem;
  }
  .footer__container--right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  .rrss {
    width: 3.6rem;
    height: 3.6rem;
  }
</style>
