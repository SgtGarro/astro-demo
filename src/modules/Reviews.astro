---
import TestimonialCarousel from '@components/TestimonialCarousel'
import reviewsJson from '@data/reviews.json'
import type { Review } from '@typings/Review'

const reviews: Review[] = reviewsJson
---

<section id="testimonials" class="section">
  <div class="container">
    <h3 class="heading-3 testimonials-title">
      Con la confianza de miles de clientes satisfechos
    </h3>
    <TestimonialCarousel reviews={reviews} client:load />
  </div>
</section>

<style>
  .section {
    background: var(--color-primary-700);
    color: var(--color-white);
  }
  .testimonials-title {
    text-align: center;
    max-width: 54.8rem;
    margin-inline: auto;
    margin-bottom: 4.8rem;
  }
</style>
