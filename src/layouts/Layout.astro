---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: inherit;
  }
  :root {
    --color-primary-100: #d8dce1;
    --color-primary-200: #bec4cc;
    --color-primary-300: #7d899a;
    --color-primary-400: #5d6c80;
    --color-primary-500: #3c4e67;
    --color-primary-600: #324156;
    --color-primary-700: #283445;
    --color-primary-800: #1e2733;
    --color-primary-900: #141a22;

    --color-secondary-100: #fce2d9;
    --color-secondary-200: #ffc7b5;
    --color-secondary-300: #f49d81;
    --color-secondary-400: #f28461;
    --color-secondary-500: #ef6c42;
    --color-secondary-600: #c75a37;
    --color-secondary-700: #9f482c;
    --color-secondary-800: #773621;
    --color-secondary-900: #502416;

    --color-title: #212529;
    --color-text: #495057;
    --color-white: #fff;
  }
  html {
    font-size: 62.5%;
    scroll-behavior: smooth;
    font-family:
      'Mulish',
      system-ui,
      -apple-system,
      sans-serif;
  }

  body {
    font-size: 1.6rem;
    color: var(--color-text);
  }

  .heading-1,
  .heading-2,
  .heading-3,
  .subtitle-1,
  .subtitle-2 {
    font-family:
      'Rubik',
      system-ui,
      -apple-system,
      sans-serif;
  }

  .font-rubik {
    font-family:
      'Rubik',
      system-ui,
      -apple-system,
      sans-serif;
  }
  .font-mulish {
    font-family:
      'Mulish',
      system-ui,
      -apple-system,
      sans-serif;
  }

  .heading-1 {
    font-weight: 700;
    font-size: 6.4rem;
    line-height: 7.2rem;
  }
  .heading-2 {
    font-weight: 700;
    font-size: 4.8rem;
    line-height: 6.4rem;
  }
  .heading-3 {
    font-weight: 600;
    font-size: 4rem;
    line-height: 4.8rem;
  }
  .subtitle-1 {
    font-weight: 500;
    font-size: 2.4rem;
    line-height: 4rem;
  }
  .subtitle-2 {
    font-weight: 500;
    font-size: 2rem;
    line-height: 2.4rem;
  }
  .body-1 {
    font-size: 1.8rem;
    line-height: 2.8rem;
  }
  .body-2 {
    font-size: 1.6rem;
    line-height: 2.4rem;
  }

  .section {
    padding: 6.4rem 3.2rem;
  }
  .container {
    max-width: 120rem;
    margin-inline: auto;
  }
</style>
